<div>
  <%= link_to link.url do %>
    <h1 class="font-bold text-4xl"><%= link.title %></h1>
    <% if user_signed_in? %>
      <p><%= link.display %></p>
    <% end %>
    <p><%= link.icon %></p>
    <p><%= link.url %></p>
    <%= link.order %>
  <% end %>
  <% if user_signed_in? %>
    <%= button_to 'Delete', link_path(link), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>
